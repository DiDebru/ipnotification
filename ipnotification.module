<?php

/**
 * @file
 * Contains ipnotification.module..
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\ipnotification\IPnotificationsendmail;
use Drupal\user\Plugin\views\argument_default\CurrentUser;

/**
 * Implements hook_help().
 */
function ipnotification_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ipnotification module.
    case 'help.page.ipnotification':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Notify administrators when users with specified IPs appear.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_insert().
 */
function ipnotification_entity_insert(EntityInterface $entity) {
  $currentip = \Drupal::request()->getClientIp();
  $user = \Drupal::currentUser();
  $url = \Drupal::service('path.current');
  $mail = \Drupal::service('plugin.manager.mail');
  $ids = \Drupal::entityQuery('ipnotification')->execute();
  list($ips, $emails) = get_emails_and_ips($ids);
  $checker = new IPnotificationsendmail($ips, $user, $url, $mail, $emails);
  $checker->ipCheckMailSend($currentip, $entity);
}

/**
 * Implements hook_user_login().
 */
function ipnotification_user_login() {
  $currentip = \Drupal::request()->getClientIp();
  $entityTypeManager = \Drupal::entityTypeManager();
  $user = \Drupal::currentUser();
  $url = \Drupal::service('path.current');
  $mail = \Drupal::service('plugin.manager.mail');
  $ids = \Drupal::entityQuery('ipnotification')->execute();
  list($ips, $emails) = get_emails_and_ips($ids);
  $checker = new IPnotificationsendmail($ips, $user, $url, $mail, $emails);
  $checker->emailCheckMailSend($currentip);
}

/**
 * Implements hook_mail().
 */
function ipnotification_mail($key, &$message, $params) {
  switch ($key) {
    case 'ipnotification':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = $params['subject'];
      $message['body'] = $params['message'];
      break;
  }
}

/**
 * Function to get the Ips and emails of all ipnotification bundles.
 *
 * @param array $ids
 *    Array of bundle ids.
 *
 * @return array
 *    Array with two arrays.
 */
function get_emails_and_ips($ids) {
  $ips = [];
  $emails = [];
  $ids = \Drupal::entityQuery('ipnotification')->execute();
  foreach ($ids as $id) {
    /** @var \Drupal\ipnotification\Entity\IPnotification $ipnotification */
    $ipnotification = \Drupal::entityTypeManager()->getStorage('ipnotification')->load($id);
    array_push($ips, $ipnotification->getIp());
    array_push($emails, $ipnotification->getEmail());
  }
  return [$ips, $emails];
}
